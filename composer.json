{
  "name": "frozzare/tank",
  "license": "MIT",
  "description": "WordPress Container",
  "homepage": "https://github.com/frozzare/tank",
  "authors": [
    {
      "name": "Fredrik Forsmo",
      "email": "fredrik.forsmo@gmail.com",
      "homepage": "https://github.com/frozzare"
    }
  ],
  "keywords": [
    "wordpress",
    "utilities"
  ],
  "support": {
    "issues": "https://github.com/frozzare/tank/issues"
  },
  "autoload": {
    "files": ["src/tank.php"]
  },
  "require": {
    "php": ">=5.4",
    "composer/installers": "~1.0",
    "frozzare/wp-autoload": "^2.0.0"
  },
  "require-dev": {
    "frozzare/wp-test-suite": "~1.0",
    "wp-coding-standards/wpcs": "dev-develop"
  },
  "scripts": {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs",
    "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
